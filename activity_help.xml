        android:fontFamily="@font/montserrat_regular"
        android:text="Предзаказ"
        android:textColor="@color/blue"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/help_zakaz2"
        app:layout_constraintTop_toBottomOf="@+id/help_zakaz2" />

    <TextView
        android:id="@+id/help_zakaz4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Чеки и документы"
        android:textColor="@color/blue"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/help_zakaz3"
        app:layout_constraintTop_toBottomOf="@+id/help_zakaz3" />

    <TextView
        android:id="@+id/help_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Оплата заказа"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/help_zakaz"
        app:layout_constraintTop_toBottomOf="@+id/help_zakaz4" />

    <TextView
        android:id="@+id/help_pay1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Способы оплаты"
        android:textColor="@color/blue"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/help_zakaz4"
        app:layout_constraintTop_toBottomOf="@+id/help_pay" />

    <TextView
        android:id="@+id/help_pay2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Ошибка при оплате"
        android:textColor="@color/blue"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/help_pay1"
        app:layout_constraintTop_toBottomOf="@+id/help_pay1" />

    <TextView
        android:id="@+id/help_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/montserrat_bold"
