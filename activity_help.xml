<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpActivity">

    <View
        android:id="@+id/refund_items_view"
        android:layout_width="0dp"
        android:layout_height="76dp"
        android:background="@color/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </View>

    <TextView
        android:id="@+id/HELP"
        style="@style/MainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Помощь"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/help_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Главная"
        android:textColor="#CC000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/refund_items_view" />

    <TextView
        android:id="@+id/help_zakaz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Заказ"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/help_main"
        app:layout_constraintTop_toBottomOf="@+id/help_main" />

    <TextView
        android:id="@+id/help_zakaz1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Статус заказа"
        android:textColor="@color/blue"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/help_zakaz"
        app:layout_constraintTop_toBottomOf="@+id/help_zakaz" />

    <TextView
        android:id="@+id/help_zakaz2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Изменить заказ или данные"
        android:textColor="@color/blue"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/help_zakaz1"
        app:layout_constraintTop_toBottomOf="@+id/help_zakaz1" />

    <TextView
        android:id="@+id/help_zakaz3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
