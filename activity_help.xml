        android:id="@+id/help_refund1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Как вернуть товар"
        android:textColor="@color/blue"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/help_delivery2"
        app:layout_constraintTop_toBottomOf="@+id/help_refund" />

    <TextView
        android:id="@+id/help_refund2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Условия и сроки возврата"
        android:textColor="@color/blue"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/help_refund1"
        app:layout_constraintTop_toBottomOf="@+id/help_refund1" />

    <TextView
        android:id="@+id/help_refund3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Когда и как вернуться деньги"
        android:textColor="@color/blue"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/help_refund2"
        app:layout_constraintTop_toBottomOf="@+id/help_refund2" />

    <TextView
        android:id="@+id/help_refund4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Открыть спор"
        android:textColor="@color/blue"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/help_refund3"
        app:layout_constraintTop_toBottomOf="@+id/help_refund3" />

