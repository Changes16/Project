        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Характеристика и наличие"
        android:textColor="@color/blue"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/help_items"
        app:layout_constraintTop_toBottomOf="@+id/help_items" />

    <TextView
        android:id="@+id/help_items2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Избранные товары"
        android:textColor="@color/blue"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/help_items1"
        app:layout_constraintTop_toBottomOf="@+id/help_items1" />

    <TextView
        android:id="@+id/help_items3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Вопросы о товаре"
        android:textColor="@color/blue"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/help_items2"
        app:layout_constraintTop_toBottomOf="@+id/help_items2" />

    <TextView
        android:id="@+id/help_items4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Подарочные сертификаты VitaMarket"
        android:textColor="@color/blue"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/help_items3"
        app:layout_constraintTop_toBottomOf="@+id/help_items3" />

    <TextView
        android:id="@+id/help_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Доставка"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/help_items"
        app:layout_constraintTop_toBottomOf="@+id/help_items4" />

    <TextView
        android:id="@+id/help_delivery1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Способы доставки"
        android:textColor="@color/blue"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/help_items4"
        app:layout_constraintTop_toBottomOf="@+id/help_delivery" />


    <TextView
        android:id="@+id/help_delivery2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/montserrat_regular"
