<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    tools:context=".RefundActivity">

    <View
        android:id="@+id/refund_items_view"
        android:layout_width="0dp"
        android:layout_height="76dp"
        android:background="@color/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></View>

    <TextView
        android:id="@+id/items_refundMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Возврат товаров"
        style="@style/MainText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <View
        android:id="@+id/view_refund"
        android:layout_width="0dp"
        android:layout_height="147dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="22dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/refund_items_view" />

    <TextView
        android:id="@+id/name_refund"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="122dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="127dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Название"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_refund" />

    <TextView
        android:id="@+id/imag"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/raleway"
        android:lineHeight="15dp"
        android:text="Корова обыкновенная, текст описания, текст описания, текст описания... "
        android:textColor="#858585"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/name_refund"
        app:layout_constraintTop_toBottomOf="@+id/name_refund" />

    <TextView
        android:id="@+id/artikul_refund"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/inter_light"
        android:text="Артикул: XXXXXXXXXX"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/view_refund"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imag"
        app:layout_constraintTop_toBottomOf="@+id/imag" />

    <TextView
        android:id="@+id/status_refund"
        android:layout_width="99dp"
        android:layout_height="15dp"
        android:layout_marginTop="6dp"
        android:lineHeight="15dp"
        android:text="Отправлено"
        android:textColor="#6CDF4F"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/artikul_refund"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/artikul_refund"
        app:layout_constraintTop_toBottomOf="@+id/artikul_refund" />

    <ImageView
        android:id="@+id/imageView_refund"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/name_refund"
        app:layout_constraintStart_toStartOf="@+id/view_refund"
        app:layout_constraintTop_toTopOf="@+id/view_refund"
        app:srcCompat="@drawable/ic_rectangle" />

    <View
        android:id="@+id/view_refund1"
        android:layout_width="0dp"
        android:layout_height="242dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="22dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_refund" />

    <TextView
        android:id="@+id/refund"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="158dp"
        android:fontFamily="@font/raleway_bold"
        android:text="Как правильно оформить возврат?"
        app:layout_constraintEnd_toEndOf="@+id/view_refund1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/view_refund1"
        app:layout_constraintTop_toTopOf="@+id/view_refund1" />

    <TextView
        android:id="@+id/step1"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="13dp"
        android:fontFamily="@font/raleway"
        android:text="Оформите заявку на возврат на странице возврата или во вкладке вернуть товары"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/ic_1"
        app:layout_constraintTop_toBottomOf="@+id/refund" />

    <TextView
        android:id="@+id/step2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/raleway"
        android:text="Дождитесь одобрения заявки"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/step1"
        app:layout_constraintTop_toBottomOf="@+id/step1" />

    <TextView
        android:id="@+id/step3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/raleway"
        android:text="Отправьте товар"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/step2"
        app:layout_constraintTop_toBottomOf="@+id/step2" />

    <TextView
        android:id="@+id/step4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/raleway"
        android:text="Дождитесь возврат денег"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/step3"
        app:layout_constraintTop_toBottomOf="@+id/step3" />

    <ImageView
        android:id="@+id/ic_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        app:layout_constraintStart_toStartOf="@+id/refund"
        app:layout_constraintTop_toBottomOf="@+id/refund"
        app:srcCompat="@drawable/___1_" />

    <ImageView
        android:id="@+id/ic_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="7dp"
        app:layout_constraintEnd_toStartOf="@+id/step2"
        app:layout_constraintTop_toBottomOf="@+id/step1"
        app:srcCompat="@drawable/ic_2" />

    <ImageView
        android:id="@+id/ic_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="7dp"
        app:layout_constraintEnd_toStartOf="@+id/step3"
        app:layout_constraintTop_toBottomOf="@+id/step2"
        app:srcCompat="@drawable/___2_" />

    <ImageView
        android:id="@+id/ic_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="7dp"
        app:layout_constraintEnd_toStartOf="@+id/step4"
        app:layout_constraintTop_toBottomOf="@+id/step3"
        app:srcCompat="@drawable/___3" />

    <TextView
        android:id="@+id/tv_refund"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:fontFamily="@font/raleway"
        android:text="Узнать о возвратах больше"
        android:textColor="#6CDF4F"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/ic_4"
        app:layout_constraintTop_toBottomOf="@+id/step4" />

</androidx.constraintlayout.widget.ConstraintLayout>