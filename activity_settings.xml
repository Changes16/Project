<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#E5E5E5"
    tools:context=".SettingsActivity">


    <View
        android:id="@+id/settings_view"
        android:layout_width="0dp"
        android:layout_height="76dp"
        android:background="@color/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </View>

    <TextView
        android:id="@+id/settingsMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Настройки"
        style="@style/MainText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <Button
        android:id="@+id/settings_1"
        android:layout_width="316dp"
        android:layout_height="50dp"
        android:layout_marginTop="7dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/montserrat_regular"
        android:text="Настройки уведомлений"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="@+id/tema"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/tema"
        app:layout_constraintTop_toBottomOf="@+id/tema" />


    <Button
        android:id="@+id/tema"
        android:layout_width="316dp"
        android:layout_height="50dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="23dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/montserrat_regular"
        android:text="Тема"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_view" />

    <Switch
        android:id="@+id/settings_switch"
        android:layout_width="316dp"
        android:layout_height="50dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="23dp"
        android:text=" "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_view" />

    <Button
        android:id="@+id/button1"
        android:layout_width="316dp"
        android:layout_height="50dp"
        android:layout_marginTop="7dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/montserrat_regular"
        android:text="Валюта"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="@+id/settings_1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/settings_1"
        app:layout_constraintTop_toBottomOf="@+id/settings_1" />

    <Button
        android:id="@+id/entrance_settings"
        android:layout_width="316dp"
        android:layout_height="50dp"
        android:layout_marginTop="7dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/montserrat_regular"
        android:text="Вход по биометриии"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="@+id/button1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/button1" />

    <Switch
        android:id="@+id/settings_switch1"
        android:layout_width="316dp"
        android:layout_height="50dp"
        android:layout_marginTop="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1" />

    <ImageView
        android:id="@+id/arrow1_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        app:layout_constraintBottom_toBottomOf="@+id/settings_1"
        app:layout_constraintEnd_toEndOf="@+id/settings_1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/settings_1"
        app:layout_constraintTop_toTopOf="@+id/settings_1"
        app:srcCompat="@drawable/arrow_point_to_right_3" />

    <ImageView
        android:id="@+id/arrow2_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        app:layout_constraintBottom_toBottomOf="@+id/button1"
        app:layout_constraintEnd_toEndOf="@+id/button1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/button1"
        app:layout_constraintTop_toTopOf="@+id/button1"
        app:srcCompat="@drawable/arrow_point_to_right_3" />

</androidx.constraintlayout.widget.ConstraintLayout>